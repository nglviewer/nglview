{
  "parser": "espree",
  "extends": "eslint:recommended",
  "rules": {
    "no-console": "off",
    "no-constant-condition": "off",
    "valid-jsdoc": "error"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true,
    "worker": true
  },
  "parserOptions": {
    "sourceType": "module"
  }
}